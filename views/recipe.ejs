<!DOCTYPE html>
<html lang="en">
<%-include('partials/header.ejs') %>

    <body>
        <%- include("partials/navbar.ejs") %>

        <div class="container my-4">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center mb-4"><%= recipe.title %></h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <img src="<%= recipe.image %>" class="img-fluid rounded shadow" alt="<%= recipe.title %>">
                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title">Details</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Ready in:</strong> <%= recipe.readyInMinutes %> minutes</li>
                                <li class="list-group-item"><strong>Servings:</strong> <%= recipe.servings %></li>
                                <li class="list-group-item"><strong>Source:</strong> <a href="<%= recipe.sourceUrl %>" target="_blank"><%= recipe.sourceName %></a></li>
                                <li class="list-group-item"><strong>Health Score:</strong> <%= recipe.healthScore %></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="card mb-4">
                        <div class="card-header">
                            Summary
                        </div>
                        <div class="card-body">
                            <p class="card-text"><%- recipe.summary %></p>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            Ingredients
                        </div>
                        <ul class="list-group list-group-flush">
                            <% recipe.extendedIngredients.forEach(function(ingredient) { %>
                                <li class="list-group-item"><%= ingredient.original %></li>
                            <% }); %>
                        </ul>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            Instructions
                        </div>
                        <div class="card-body">
                            <%- recipe.instructions %>
                        </div>
                    </div>
                </div>
            </div>
        </div>




            <%- include('partials/footer.ejs') %>
    </body>

</html>